<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/notesDetailLectureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visual_notes"
            android:textSize="16dp" />

        <ListView
            android:id="@+id/notesDetailNotesListView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/notesDetailLectureTextView"
            android:textSize="15sp" >

        </ListView>

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewClassHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editClass_lv_schedule"
        android:layout_centerVertical="true"
        android:text="Audio Notes:"
        android:textSize="16dp" />

    <ListView
        android:id="@+id/editClass_lv_schedule"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/rl1"
        android:layout_below="@+id/textViewClassHistory" >
    </ListView>

</RelativeLayout>